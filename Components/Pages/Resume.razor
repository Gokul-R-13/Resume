@page "/"

<!-- Top Navbar -->
<nav class="navbar">
    <div class="navbar-left">
        <h2>@resumeData.Name</h2> <span>@resumeData.Title</span>
    </div>
    <div class="navbar-right">
        <span>üìû @resumeData.Phone</span>
        <span>‚úâÔ∏è @resumeData.Email</span>
        <a href="@resumeData.LinkedIn" target="_blank">LinkedIn</a>
        <a href="@resumeData.GitHub" target="_blank">GitHub</a>
    </div>
</nav>

<!-- Resume Content -->
<div class="resume-content">
    <section>
        <h4>Professional Summary</h4>
        <p>@resumeData.Summary</p>
    </section>

    <section>
        <h4>Work Experience</h4>
        @foreach (var exp in resumeData.Experiences)
        {
            <div class="experience-item">
                <div class="experience-header">
                    <strong>@exp.Role</strong> ‚Äî @exp.Company
                    <span class="muted">(@exp.Duration, @exp.Location)</span>
                </div>
                <ul>
                    @foreach (var detail in exp.Responsibilities)
                    {
                        <li>@detail</li>
                    }
                </ul>
            </div>
        }
    </section>


    <section>
        <h4>Technical Skills</h4>
        <ul>
            @foreach (var skill in resumeData.Skills)
            {
                <li><strong>@skill.Category:</strong> @string.Join(", ", skill.Items)</li>
            }
        </ul>
    </section>

    <section>
        <h4>Projects</h4>
        @foreach (var proj in resumeData.Projects)
        {
            <div class="project-item">
                <strong>@proj.Title</strong>
                <em>@proj.Technology</em>
            </div>
        }
    </section>

    <section>
        <h4>Education</h4>
        @foreach (var edu in resumeData.Education)
        {
            <p>
                <strong>@edu.Degree</strong> ‚Äî @edu.Institution
                <span class="muted">(@edu.Year, @edu.Location)</span>
            </p>
        }
    </section>

    <section>
        <h4>Certifications</h4>
        <ul>
            @foreach (var cert in resumeData.Certifications)
            {
                <li>@cert</li>
            }
        </ul>
    </section>
</div>

